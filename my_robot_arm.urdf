<?xml version="1.0"?>
<robot name="my_robot_arm">

  
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder length="0.2" radius="0.08"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder length="0.2" radius="0.08"/>
      </geometry>
      <material name="base_color">
        <color rgba="0.1 0.2 0.9 1"/>
      </material>
    </visual>
  </link>


  
  <link name="link1">
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.02" ixy="0" ixz="0"
               iyy="0.02" iyz="0"
               izz="0.01"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0.2"/>
      <geometry>
        <box size="0.1 0.1 0.4"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.2"/>
      <geometry>
        <box size="0.1 0.1 0.4"/>
      </geometry>
      <material name="arm_color_1">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>
  </link>


   
  <link name="link2">
    <inertial>
      <mass value="0.6"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.015" ixy="0" ixz="0"
               iyy="0.015" iyz="0"
               izz="0.008"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0.175"/>
      <geometry>
        <box size="0.08 0.08 0.35"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0.175"/>
      <geometry>
        <box size="0.08 0.08 0.35"/>
      </geometry>
      <material name="arm_color_2">
        <color rgba="0.9 0.2 0.2 1"/>
      </material>
    </visual>
  </link>


 
  <link name="wrist_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="wrist_color">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
    </collision>
  </link>


 
  <link name="finger_left">
    <visual>
      <origin xyz="0 0 0.06"/>
      <geometry>
        <box size="0.02 0.02 0.12"/>
      </geometry>
      <material name="finger_color">
        <color rgba="0.8 0.8 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.06"/>
      <geometry>
        <box size="0.02 0.02 0.12"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= RIGHT FINGER ================= -->
  <link name="finger_right">
    <visual>
      <origin xyz="0 0 0.06"/>
      <geometry>
        <box size="0.02 0.02 0.12"/>
      </geometry>
      <material name="finger_color2">
        <color rgba="0.8 0.8 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.06"/>
      <geometry>
        <box size="0.02 0.02 0.12"/>
      </geometry>
    </collision>
  </link>


  
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.2"/>
    <axis xyz="0 0 1"/>
    <limit effort="25" velocity="1.5" lower="-1.57" upper="1.57"/>
  </joint>

 
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.4"/>
    <axis xyz="0 1 0"/>
    <limit effort="25" velocity="1.5" lower="-1.57" upper="1.57"/>
  </joint>

  
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="wrist_link"/>
    <origin xyz="0 0 0.35"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="1.5" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- ================= LEFT GRIPPER JOINT ================= -->
  <joint name="left_grip_joint" type="prismatic">
    <parent link="wrist_link"/>
    <child link="finger_left"/>
    <origin xyz="0.03 0 0.1"/>
    <axis xyz="1 0 0"/>
    <limit effort="5" velocity="0.1" lower="0" upper="0.04"/>
  </joint>

 
  <joint name="right_grip_joint" type="prismatic">
    <parent link="wrist_link"/>
    <child link="finger_right"/>
    <origin xyz="-0.03 0 0.1"/>
    <axis xyz="-1 0 0"/>
    <limit effort="5" velocity="0.1" lower="0" upper="0.04"/>
  </joint>

</robot>

