<?xml version="1.0" ?>
<sdf version="1.11">
  <model name="my_robot_arm">
    <static>false</static>

    <!-- Base link -->
    <link name="base_link">
      <pose>0 0 0.1 0 0 0</pose>
      <visual name="base_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Upper link -->
    <link name="link1">
      <pose>0 0 0.3 0 0 0</pose>
      <visual name="link1_visual">
        <geometry>
          <box>
            <size>0.05 0.05 0.3</size>
          </box>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
      <collision name="link1_collision">
        <geometry>
          <box>
            <size>0.05 0.05 0.3</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Joint -->
    <joint name="joint1" type="revolute">
      <parent>base_link</parent>
      <child>link1</child>
      <pose>0 0 0.2 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

  </model>
</sdf>

